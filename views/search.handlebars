{{> format/leftSideOpen}}
<!-- Search bar -->
<form id="search-form" action="/books/search" method="POST">
    <div class="col-8 searchbar">
        <div class="input-group mb-4 ">
            <input type="text" name="query"  class="form-control" id="searchbar" placeholder="Search Input" />
            <button class="btn btn-primary" type="submit" id="submit"> Search </button>
        </div>
    </div>
    <!-- filters -->
    <h3>Search Filters:</h3>
    <div class="form-check">
        <input class="form-check-input" type="radio" name="filter" value="isbn" id="isbn-filter" />
        <label class="form-check-label" for="isbn-filter"> ISBN Search </label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="radio" name="filter" value="subject" id="subject-filter" />
        <label class="form-check-label" for="subject-filter"> Subject </label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="radio" name="filter" value="title" id="title-filter" />
        <label class="form-check-label" for="title-filter"> Title </label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="radio" name="filter" value="course" id="course-filter" />
        <label class="form-check-label" for="course-filter"> Course </label>
    </div>
</form>
{{> format/leftSideClose}}
